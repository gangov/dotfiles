# Set the background image
image=~/Pictures/Wallpapers/blade-runner.jpg

# Set the font
font=monospace:size=24

# Set the text color
text-color=#ffffff

# Set the key to exit the lock screen
key=Escape

# Set the command to run when the lock screen is exited
command=swaymsg "output * dpms on"

# Set the fade in and out times
fade-in=0.5
fade-out=0.5

# Set the dim amount
dim=0.5

# Set the indicator type
indicator=lines

# Set the indicator color
indicator-color=#ffffff

# Set the indicator size
indicator-size=24

# Set the indicator padding
indicator-padding=10

# Ignore empty passwords
ignore-empty-password

# Display time and date
clock
timestr=%H:%M:%S
datestr=%Y-%m-%d
layout-text-position=center
layout-text-padding=0,350
