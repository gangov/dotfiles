font_family      MesloLGS Nerd Font Mono
bold_font        Regular
italic_font      auto
bold_italic_font auto

font_size 14.0

#tabs movement
map control+1 goto_tab 1
map control+2 goto_tab 2
map control+3 goto_tab 3
map control+4 goto_tab 4
map control+5 goto_tab 5
map control+6 goto_tab 6
map control+7 goto_tab 7
map control+8 goto_tab 8
map control+9 goto_tab 9

term xterm-256color


# BEGIN_KITTY_THEME
# Material
include current-theme.conf
# END_KITTY_THEME

# Linux keyboard layout
map left control
# This brakes in arch: map right windows
swapcmd
swapopt

# Remove Mac OS option mapping
#macos_option_as_alt left

# clipboard
clipboard_control write-clipboard read-clipboard

# cow bell
# bell_path /home/gangov/.config/kitty/mixkit-cowbell-sharp-hit-1743.wav
# hl2 bell
bell_path /home/gangov/.config/kitty/physcannon_tooheavy.wav

# splits
enabled_layouts grid
